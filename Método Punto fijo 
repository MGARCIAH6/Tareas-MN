        "#Ingreso de la funcion que quiera ser calculada con punto fijo \n",
        "def g(x):\n",
        "  return cos(x)\n",
        "\n",
        "def puntofijo(x0,n,tol):\n",
        "  for k  in range(n):\n",
        "    x1=g(x0)\n",
        "    if  (abs(x1-x0)<tol):\n",
        "      print('x',k+1,'=',x1,'es punto fijo ')\n",
        "      return \n",
        "    x0=x1\n",
        "    print('x',k+1,'=',x1)\n",
        "puntofijo(pi/2,50,0.000001)"
